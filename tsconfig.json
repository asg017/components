{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "module": "umd",
    "rootDir": "src",
    "target": "es5",
    "jsx": "react",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "declaration": true,
    "declarationDir": "./dist"
  },
  "include": ["./src"],
  "exclude": ["node_modules", "dist"]
}
